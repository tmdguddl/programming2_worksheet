#include <stdio.h>

int main() {
    int n, sum = 0, odd_sum = 0, even_sum = 0;

    printf("자연수 n 입력 : ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        sum += i;
        if (i % 2 == 0) {
            even_sum += i;
        } else {
            odd_sum += i;
        }
    }

    printf("숫자 합: %d\n", n, sum);
    printf("홀수 합: %d\n", n, odd_sum);
    printf("짝수 합: %d\n", n, even_sum);

    return 0;
}
